<!DOCTYPE html>
<html lang="en">

        <head>
            <meta charset="UTF-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">

            <link rel="stylesheet" href="/css/controlPanel-styles.css" title="cont">
            <link rel="stylesheet" href="/css/whatsapp.css">

            <script src="https://kit.fontawesome.com/4c9feabc71.js" crossorigin="anonymous"></script>
            <title>Listado de Juguetes</title>
        </head>

        <body>     
            <h2 class="nav">Resultado de la Busqueda</h2><br>
                <div class="search-container">
                    <form class="search-by-name2" action="/search" method="GET" >
                        <input  type="text" name="keywords" placeholder=" Busca un juguete">
                        <button type="submit" class="form-button" >Buscar</button>
                    </form>

                    <a href="/crear-producto" id="create-link-button"> <button class="form-button create-button">Crear un juguete</button> </a>
                </div>

            <section class="product-display">

                <% if(searchResult.length > 0) {%>  
                    <% searchResult.map(e=> { %>
                        <article class="card">
                            <a href="/juguetes/<%= e.id %>">
                                <img src="/img/products/<%= e.principal_img %>" alt="juguete1">
                                <h3>
                                    <%= e.name %>
                                </h3>
                                <p class="precio-card">
                                    <%= e.price %>$
                                </p>
                                <div class="form-buttons">
                                    <a href="../edit/<%=e.id%>"> <button type="submit" class="form-button">EDIT</button></a>

                                    <form action="../<%=e.id%>?_method=DELETE" method="POST">
                                        <button type="submit" class="form-button">DELETE</button>
                                    </form>
                                </div>
                            </a>
                        </article>
                    <% }) 
            
                }else if ( searchResult == 0) {%>
                        
                    <div>            
                        <h2 class="result_search_title2" style="color: tomato;"> No hay productos que coincidan con la b√∫squeda</h2>
                    </div>

                <%  }  %>
                     
            </section>
    </body>
</html>