<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link rel="stylesheet" href="/css/product-ages-styles.css" title="cont">


        <script src="https://kit.fontawesome.com/4c9feabc71.js" crossorigin="anonymous"></script>
        <title>Rayuela</title>
    </head>
    <body>
     <%- include('../partials/header.ejs') %>
    
     <h1 class="titulo-categoria">
        Edad Recomendada:  <%=juguetesXedad[0].ages.recommended_age %>
    </h1>
     
     <section class="product-display">
        <% juguetesXedad.map(e=> { %>
            <article class="card">
                <a href="/juguetes/<%= e.id %>">
                   
                    <img src="/img/products/<%=e.principal_img %>" alt="juguete1">
                    <h3>
                        <%= e.name%>
                    </h3>
                    <p class="precio-card">
                        <%=e.price%>$
                    </p>
                </a>
                    <button type="submit" id="<%= e.id %>" class="add-to-cart-button2"><i class="fa-solid fa-bag-shopping"></i>
                        AGREGAR AL
                        CARRITO</button>
                
            </article>

            <% }) %>

            <div>
                <%- include('../partials/whatsappButton.ejs') %>
            </div>
    </section>

    <footer>
        <%- include('../partials/footer.ejs') %>
    </footer>
    
    <!-- <script src="/js/agregarAlCarrito.js"></script> -->
</body>
    

</html>